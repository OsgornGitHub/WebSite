<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<div class="container">

</div>
<body>
    <main>
        <input id="tab1" type="radio" name="tabs" checked>
        <label for="tab1">Artist</label>

        <input id="tab2" type="radio" name="tabs">
        <label for="tab2">Top Music</label>

        <input id="tab3" type="radio" name="tabs">
        <label for="tab3" class="top_albums">Top album</label>


        <input id="tab4" type="radio" name="tabs">
        <label for="tab4" class="similar" type="radio" name="tabs">Similar</label>

        <button class="prev_a btn btn-default">Previous</button>
        <button id="page" class="btn btn-default"></button>
        <button class="next_a btn btn-default">Next</button>
        <button class="12a btn btn-default">12</button>
        <button class="24a btn btn-default">24</button>
        <button class="36a btn btn-default">36</button>
        <input id="name_a" type="hidden" value="@Model.Name"/>

        <section id="content1">
            <h2 id="name" class="text-center">@Model.Name</h2>
            <div class="col-md-3">
                <img class="photo-artist" src="@Model.Photo" style="width : 90%" />

            </div>
            <div class="col-md-9">
                <pre>@Model.Biography</pre>
            </div>
        </section>
        <section id="content2"></section>
        <section id="content3">
            <div class="albums">

            </div>
        </section>
        <section id="content4" class="similar">

            <div class="artist" style="margin-top: 50px">

            </div>
        </section>

    </main>


</body>

