@model Album
@{
    ViewData["Title"] = "GetAlbum";
}


<div class="container">


    <h2 class="text-center">@Model.NameAlbum</h2>

    <div class="col-md-4" style="padding: 0px; margin: 0px;">
        <img src="@Model.Cover" style="border-radius: 190px; margin: 15px;" />
        <h3 class="text-center">@Model.NameArtist</h3>
    </div>


    <div class="col-md-8" style="padding: 0px; margin: 0px; ">
        @foreach (var track in Model.Music)
        {

            <h4 class="text-right btn btn-default" style="display: block">@track.Name</h4>
            @if (track.Link != null)
            {
                <a href=@track.Link>
                    <h5 class="text-center" style="cursor: pointer">
                        Download
                        <span class="glyphicon glyphicon-floppy-disk"></span>
                    </h5>
                </a>
            }

        }
    </div>
</div>






